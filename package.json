{
    "name": "@beerstack/nope",
    "version": "0.0.10",
    "main": "dist/nope.umd.js",
    "module": "dist/nope.js",
    "types": "dist/nope.d.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "rm -rf ./dist",
        "dev": "vite",
        "build": "tsc && rm -rf ./dist && vite build && tsc -p ./tsconfig-build.json --outDir ./dist",
        "serve": "vite preview",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.2.1",
        "prettier": "^2.8.0",
        "typescript": "^4.9.3",
        "vite": "^3.2.5",
        "vitest": "^0.28.5"
    }
}
