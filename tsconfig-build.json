{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "./dist",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true
    },
    "include": ["./lib**/*.ts"],
    "exclude": ["./lib/**/*.test.ts"]
}
  